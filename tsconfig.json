    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true,
        "rootDir": "src",
        "allowJs": false,
        "checkJs": false,
        "skipLibCheck": true,
        "baseUrl": ".",
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}